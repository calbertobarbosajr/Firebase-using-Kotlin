<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/c"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StorageUploadActivity">

    <ImageView
        android:id="@+id/showImage1"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_marginBottom="16dp"
        android:onClick="showImage1"
        app:layout_constraintBottom_toTopOf="@+id/showImage2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/choose_image_48" />

    <ImageView
        android:id="@+id/showImage2"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_marginBottom="16dp"
        android:onClick="showImage2"
        app:layout_constraintBottom_toTopOf="@+id/showImage3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showImage1"
        app:srcCompat="@drawable/choose_image_48" />

    <ImageView
        android:id="@+id/showImage3"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_marginBottom="16dp"
        android:onClick="showImage3"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showImage2"
        app:srcCompat="@drawable/choose_image_48" />

    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="buttonUpload"
        android:text="Upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showImage3" />

</androidx.constraintlayout.widget.ConstraintLayout>